draw_set_colour(c_green);
if (global.currency&lt;7+global.cooldown*7 || global.cooldown &gt;=9) {
    draw_set_colour(c_red);
}
upgrade_level(global.cooldown,7+global.cooldown*7,room_width-40-125,495);
draw_set_colour(c_white);

// diamonds
